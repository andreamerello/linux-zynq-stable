/dts-v1/;
/include/ "zynq-7000.dtsi"

/*
 * include for HDMI on ZED
 /include/ "zed-hdmi.dtsi"
 */

/*
 * include for canotto IP/slave-board
 *
 /include/ "zed-canotto.dtsi"
 */

/*
 * include for VGA ocfb-edl IP
 */

/include/ "zed-ocfb-edl.dtsi"


/ {
	model = "Zynq Zed Development Board";
	compatible = "xlnx,zynq-zed", "xlnx,zynq-7000";

	aliases {
		ethernet0 = &gem0;
		serial0 = &uart1;
	};

	memory {
		device_type = "memory";
		reg = <0x0 0x20000000>;
	};

	chosen {
		bootargs = "earlyprintk root=/dev/mmcblk0p2 rootwait";
		stdout-path = "serial0:115200n8";
	};
};

&clkc {
	ps-clk-frequency = <33333333>;
	fclk-enable = <0xf>;
};

&gem0 {
	status = "okay";
	phy-mode = "rgmii-id";
	phy-handle = <&ethernet_phy>;

	ethernet_phy: ethernet-phy@0 {
		reg = <0>;
	};
};

&sdhci0 {
	status = "okay";
};

&uart1 {
	status = "okay";
};

&usb0 {
	status = "okay";
	dr_mode = "host";
};
